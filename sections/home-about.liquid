<section class="home-about">
  <div class="page-width">
    {% render 'section-heading', title: section.settings.heading, subtitle: section.settings.subtitle %}

    <div class="home-about__content">
      {{ section.settings.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home About",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Baked with love since 1956"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>We are Sunrise Bakers from Dehradun.</p>"
    }
  ],
  "presets": [
    {
      "name": "Home About"
    }
  ]
}
{% endschema %}
